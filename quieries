CREATE TABLE mail (id INT NOT NULL PRIMARY KEY AUTO_INCREMENT, from_ VARCHAR(50), to_ VARCHAR(255), subject VARCHAR(50), content VARCHAR(255), status INT, type INT, mark INT,created_at DATETIME DEFAULT CURRENT_TIMESTAMP);

insert into mail(from_, to_, subject, content, status, type, mark) values("info@prueba.com", "info@alvaro.com", "urgente", "saludos amiko",0,0,0 );

